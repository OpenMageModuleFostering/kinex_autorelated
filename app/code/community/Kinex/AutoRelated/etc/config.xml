<?xml version="1.0"?>
<config>
  <modules>
    <Kinex_AutoRelated>
      <version>1.0.3</version>
    </Kinex_AutoRelated>
  </modules>
  <global>
  		<blocks>
			<autorelated>
				<class>Kinex_AutoRelatedproducts_Block</class>
			</autorelated>
			<catalog>
				<rewrite>
					<product_list_related>Kinex_AutoRelated_Block_Related</product_list_related>
				</rewrite>
			</catalog>
		</blocks>
		<models>
			<autorelated>
				<class>Kinex_AutoRelated_Model</class>
			</autorelated>
		</models>

    <helpers>
      <autorelated>
        <class>Kinex_AutoRelated_Helper</class>
      </autorelated>
    </helpers>
  </global>
  	<adminhtml>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<autorelated translate="title" module="autorelated">
											<title>Related Products</title>
										</autorelated>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
	<default>
		<autorelated>
			<general>
				<enabled>1</enabled>
				<limit>3</limit>
				<cache_lifetime>3600</cache_lifetime>
			</general>
		</autorelated>
	</default>
</config> 